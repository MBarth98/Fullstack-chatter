{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
           
            "label": "deploy to firebase",
            "type": "shell",
            "linux": {
                "command": "${cwd}/scripts/firebase.sh",
                "args": [
                    "deploy"
                ],
                "problemMatcher": [
                    "$eslint-stylish"
                ]
            },
            "command": "echo invalid operating system"
        },
        {
            "label": "serve local firebase",
            "type": "shell",
            "linux": {
                "command": "${cwd}/scripts/firebase.sh",
                "args": [
                    "serve"
                ],
                "problemMatcher": [
                    "$eslint-stylish"
                ]
            },
            "command": "echo invalid operating system"
        }
    ]
}